PORT=3000
JWT_SECRET=change-this-secret-in-production
# PostgreSQL connection string (recommended).
# Example:
# DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5432/sihha
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5432/sihha
# Set to true if your provider requires SSL (managed PG services).
PGSSLMODE_REQUIRE=false

# Optional source SQLite path used by migration script:
# npm run migrate:sqlite:pg
SQLITE_MIGRATION_PATH=./data/sihha.db
# Public URL used to build uploaded file links in responses.
# Example in production: https://api.your-domain.com
PUBLIC_BASE_URL=http://localhost:3000

# LiveKit (self-hosted)
# Use secure WSS endpoint in production.
LIVEKIT_URL=wss://livekit.your-domain.com
LIVEKIT_API_KEY=replace-with-livekit-api-key
LIVEKIT_API_SECRET=replace-with-livekit-api-secret
LIVEKIT_TOKEN_TTL_SECONDS=900
LIVEKIT_ROOM_PREFIX=sihha

# OpenAI (server-side only, never expose to Flutter client)
OPENAI_API_KEY=replace-with-openai-api-key
OPENAI_TRIAGE_MODEL=gpt-4o-mini
TRIAGE_ENABLE_MODERATION=true
